class Star 
{
	public static void main(String[] args) 
	{
		int n=5;
		int spaces=n-1;
		int stars=1;
		for(int i=1;i<=n;i++)
			{
			int l=1;
			for(int j=1;j<=spaces;j++)
			{
				System.out.print(" ");
			}
				for(int k=1;k<=stars;k++)
				{
					if(k<=stars/2)
					{
					System.out.print(l++);
					}
					else
					System.out.print(l--);
				}
				System.out.println();
				stars+=2;
				spaces--;
			}
	}
}
